<%- include('includes/head.ejs') %>
  </head>

  <body>
    <%- include('includes/header.ejs') %>
    <main>
      <h1>My Products</h1>
      <p>List of all the products...</p>

      <% if (products.length > 0) { %>
      <div class="grid">

        <% for (let item of products) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= item.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= item.image %>" alt="<%= item.title %>">
                </div>
                <div class="card__content">
                    <h2 class="product__price"><%= item.price %></h2>
                    <p class="product__description"><%= item.description %></p>
                </div>
                <div class="card__actions">
                    <a href="/products/<%= item.id %>" class="btn">Details</a>
                    <%- include('includes/add-to-cart.ejs', {product: item}) %>
                </div>
            </article>
            <% } %>

        </div>
        <% } else { %>
        <div class="">Products not found!</div>
        <% } %>
    </main>
  </body>
</html>
